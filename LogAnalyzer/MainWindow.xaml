<Window x:Class="LogAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogAnalyzer"
        xmlns:vm="clr-namespace:LogAnalyzer.ViewModels"
        xmlns:ctrls="clr-namespace:LogAnalyzer.Controls"
        xmlns:views="clr-namespace:LogAnalyzer.Views"
        xmlns:res="clr-namespace:LogAnalyzer.Resources"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="SettingsToggle">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="SettingsPaneTransform"
                                     Storyboard.TargetProperty="X"
                                     To="0" Duration="0:0:0.2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="ToggleButton.Unchecked" SourceName="SettingsToggle">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="SettingsPaneTransform"
                                     Storyboard.TargetProperty="X"
                                     To="320" Duration="0:0:0.2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="+" Command="{Binding AddListCommand}" Width="20" />
                
                <TextBlock Margin="12,0,0,0" VerticalAlignment="Center" Text="Profil:" />
                <ComboBox ItemsSource="{Binding Profiles}"
                          SelectedItem="{Binding SelectedProfile, Mode=TwoWay}"
                          DisplayMemberPath="Name"
                          Width="100"
                          Margin="6,0,0,0" />

                <TextBlock Margin="12,0,0,0" VerticalAlignment="Center" Text="Date" />
                <ctrls:DateRangePicker FromDate="{Binding FilterFromDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       ToDate="{Binding FilterToDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <ToggleButton x:Name="SettingsToggle" Content="Settings" Margin="12,0,0,0" Width="100" />
        </StackPanel>
        <ItemsControl Grid.Row="2" ItemsSource="{Binding Lists}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Columns="{Binding Lists.Count}" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="{x:Type vm:LogListViewModel}">
                <views:LogListView />
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <GridSplitter Grid.Row="3" HorizontalAlignment="Stretch" Height="6" VerticalAlignment="Center" ResizeDirection="Rows" Background="#33000000"/>
        <views:LiveChartView Grid.Row="4" DataContext="{Binding ChartVM}">
            <views:LiveChartView.Style>
                <Style TargetType="{x:Type views:LiveChartView}">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Value="False"
                                     Binding="{Binding DataContext.SettingsVM.ShowLiveChart,
                                                       RelativeSource={RelativeSource AncestorType=Window}}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </views:LiveChartView.Style>
        </views:LiveChartView>

        <!-- Sliding Settings Pane -->
        <Border x:Name="SettingsPane" Grid.RowSpan="5" Width="320" Background="#F0F0F0" BorderBrush="#CCC" BorderThickness="1" HorizontalAlignment="Right" DataContext="{Binding SettingsVM}">
            <Border.RenderTransform>
                <TranslateTransform x:Name="SettingsPaneTransform" X="320" />
            </Border.RenderTransform>
            <views:SettingsView />
        </Border>
    </Grid>
</Window>
